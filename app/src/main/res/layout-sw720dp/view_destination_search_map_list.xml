<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_destination_map"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_toastpopup4"
    android:clickable="true"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="35dp"
            android:layout_height="40dp"
            android:scaleType="centerCrop"
            android:src="@drawable/icon_pin_nor" />

        <RelativeLayout
            android:id="@+id/layout_header"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="center_vertical"
            android:visibility="gone">

            <kr.go.molit.nhsnes.widget.TextViewEx
                android:id="@+id/tv_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="거리 30km"
                android:textColor="@color/white"
                android:textSize="13sp" />

            <kr.go.molit.nhsnes.widget.TextViewEx
                android:id="@+id/tv_remain_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/tv_distance"
                android:text="30분"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <kr.go.molit.nhsnes.widget.TextViewEx
                android:id="@+id/tv_arrive_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_remain_time"
                android:layout_centerVertical="true"
                android:layout_marginTop="5dp"
                android:layout_toLeftOf="@id/tv_distance"
                android:text="오후 15:30 도착 예정"
                android:textColor="@color/white"
                android:textSize="13sp" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <kr.go.molit.nhsnes.widget.TextViewEx
                android:id="@+id/tv_address_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="11sp" />

            <kr.go.molit.nhsnes.widget.TextViewEx
                android:id="@+id/tv_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textColor="#B0B0B0"
                android:textSize="9sp" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="5dp"
        android:background="@color/white" />


</LinearLayout>