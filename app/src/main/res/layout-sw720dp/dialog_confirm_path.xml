<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:background="@color/dialogBg"
  android:orientation="vertical">

  <FrameLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/img_pop_title_type1">

    <kr.go.molit.nhsnes.widget.TextViewEx
      android:id="@+id/tv_title"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      android:layout_marginBottom="5dp"
      android:text="경로 확정"
      android:textColor="#ffffff"
      android:textSize="20sp" />
  </FrameLayout>


  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/img_pop_content_type1"
    android:gravity="center"
    android:orientation="horizontal">


    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:gravity="center"
      android:orientation="horizontal">


      <kr.go.molit.nhsnes.widget.TextViewEx
        android:id="@+id/tv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="경로들"
        android:textColor="#ffffff"
        android:textSize="16sp" />
    </LinearLayout>


  </LinearLayout>

  <LinearLayout
    android:id="@+id/ll_save"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/img_pop_botton_type1"
    android:orientation="horizontal">

    <kr.go.molit.nhsnes.widget.TextViewEx
      android:id="@+id/btn_simulation"
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_gravity="center"
      android:layout_weight="1"
      android:gravity="center"
      android:text="모의주행"
      android:textColor="@drawable/selector_dialog_btn"
      android:textSize="16.67sp" />

    <kr.go.molit.nhsnes.widget.TextViewEx
      android:id="@+id/btn_save"
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_gravity="center"
      android:layout_weight="1"
      android:gravity="center"
      android:text="저장"
      android:textColor="@drawable/selector_dialog_btn"
      android:textSize="16.67sp" />
  </LinearLayout>

  <LinearLayout
    android:visibility="gone"
    android:id="@+id/ll_complate"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/img_pop_botton_type1"
    android:gravity="center"
    android:orientation="horizontal">

    <FrameLayout
      android:id="@+id/btn_conplate"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center_horizontal"
      android:background="@drawable/selector_type3_btn"
      android:clickable="true">

      <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <ImageView
          android:id="@+id/icon_check2"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center|left"
          android:background="@drawable/icon_decide" />

        <kr.go.molit.nhsnes.widget.TextViewEx
          android:id="@+id/tv_menu2"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center|left"
          android:layout_marginLeft="5dp"
          android:text="경로 확정"
          android:textColor="@color/white"
          android:textSize="16sp" />
      </LinearLayout>

    </FrameLayout>
  </LinearLayout>

</LinearLayout>

