<?xml version="1.0" encoding="utf-8"?><!-- 저장매체 선택 팝업 --><!-- 로컬공간, 외부저장매체 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:background="@color/dialogBg"
  android:orientation="vertical">

  <FrameLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/img_pop_title_type1">

    <kr.go.molit.nhsnes.widget.TextViewEx
      android:id="@+id/tv_title"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      android:layout_marginBottom="5dp"
      android:text="좌표 검색"
      android:textColor="#ffffff"
      android:textSize="20sp" />
  </FrameLayout>


  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:background="@drawable/img_pop_content_type1"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="40dp"
      android:gravity="center"
      android:orientation="horizontal"
      android:paddingLeft="20dp"
      android:paddingRight="20dp">

      <kr.go.molit.nhsnes.widget.TextViewEx
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:text="N"
        android:textColor="@color/white"
        android:textSize="20sp" />

      <EditText
        android:id="@+id/et_n_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:background="@drawable/bg_edittext_foc"
        android:inputType="numberDecimal"
        android:padding="2dp"
        android:textColor="@android:color/white"
        android:textSize="16sp" />


    </LinearLayout>

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="center"
      android:orientation="horizontal"
      android:paddingLeft="20dp"
      android:paddingRight="20dp">

      <kr.go.molit.nhsnes.widget.TextViewEx
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:text="E"
        android:textColor="@color/white"
        android:textSize="20sp" />

      <EditText
        android:id="@+id/et_e_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:background="@drawable/bg_edittext_foc"
        android:inputType="numberDecimal"
        android:padding="2dp"
        android:textColor="@android:color/white"
        android:textSize="16sp" />


    </LinearLayout>

    <FrameLayout
      android:id="@+id/bt_menu1"
      android:visibility="visible"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center_horizontal"
      android:layout_marginBottom="20dp"
      android:layout_marginTop="20dp"
      android:background="@drawable/selector_type3_btn"
      android:clickable="true">

      <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <kr.go.molit.nhsnes.widget.TextViewEx
          android:id="@+id/tv_menu1"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center|left"
          android:layout_marginLeft="5dp"
          android:text="좌표 검색"
          android:textColor="@color/white"
          android:textSize="16sp" />
      </LinearLayout>

      <ImageView
        android:id="@+id/icon_check1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|left"
        android:background="@drawable/icon_search1" />

    </FrameLayout>

    <LinearLayout
      android:id="@+id/ll_menu3"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginBottom="20dp"
      android:layout_marginTop="20dp"
      android:orientation="horizontal">

      <FrameLayout
        android:id="@+id/bt_start_complate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:background="@drawable/selector_type3_btn"
        android:clickable="true">

        <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:orientation="horizontal">


          <kr.go.molit.nhsnes.widget.TextViewEx
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|left"
            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:text="출발지\n확정"
            android:textColor="@color/white"
            android:textSize="16sp" />
        </LinearLayout>

      </FrameLayout>

      <FrameLayout
        android:id="@+id/bt_end_complate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:background="@drawable/selector_type3_btn"
        android:clickable="true">

        <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:orientation="horizontal">


          <kr.go.molit.nhsnes.widget.TextViewEx
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|left"
            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:text="도착지\n확정"
            android:textColor="@color/white"
            android:textSize="16sp" />
        </LinearLayout>

      </FrameLayout>

      <FrameLayout
        android:id="@+id/bt_route_complate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:background="@drawable/selector_type3_btn"
        android:clickable="true">

        <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:orientation="horizontal">


          <kr.go.molit.nhsnes.widget.TextViewEx
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|left"
            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:text="경유지\n확정"
            android:textColor="@color/white"
            android:textSize="16sp" />
        </LinearLayout>

      </FrameLayout>

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
      android:id="@+id/rv_search_waypoint"
      android:layout_width="match_parent"
      android:layout_height="150dp"
      android:visibility="visible" />

    <FrameLayout
      android:id="@+id/bt_menu2"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center_horizontal"
      android:layout_marginBottom="20dp"
      android:layout_marginTop="20dp"
      android:background="@drawable/selector_type3_btn"
      android:clickable="true"
      android:visibility="gone">

      <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <ImageView
          android:id="@+id/icon_check2"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center|left"
          android:background="@drawable/icon_decide" />

        <kr.go.molit.nhsnes.widget.TextViewEx
          android:id="@+id/tv_menu2"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center|left"
          android:layout_marginLeft="5dp"
          android:text="경로 확정"
          android:textColor="@color/white"
          android:textSize="16sp" />
      </LinearLayout>

    </FrameLayout>

  </LinearLayout>

  <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/img_pop_botton_type1"
    android:orientation="horizontal"
    android:visibility="gone">

    <kr.go.molit.nhsnes.widget.TextViewEx
      android:id="@+id/btn_ok"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_gravity="center"
      android:layout_weight="1"
      android:gravity="center"
      android:text="즐겨찾기 추가"
      android:textColor="@drawable/selector_dialog_btn"
      android:textSize="16.67sp" />

    <kr.go.molit.nhsnes.widget.TextViewEx
      android:id="@+id/btn_delete"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_gravity="center"
      android:layout_weight="1"
      android:gravity="center"
      android:text="삭제"
      android:textColor="@drawable/selector_dialog_btn"
      android:textSize="16.67sp" />


  </LinearLayout>

</LinearLayout>

