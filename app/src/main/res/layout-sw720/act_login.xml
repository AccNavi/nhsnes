<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="center"
        android:src="@drawable/img_intro" />

    <FrameLayout
        android:id="@+id/fl_login"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#f2000000" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/img_pop_title_type1">

                <kr.go.molit.nhsnes.widget.TextViewEx
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="5dp"
                    android:lineSpacingExtra="5dp"
                    android:text="로그인"
                    android:textColor="#ffffff"
                    android:textSize="20sp" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/img_pop_content_type1"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:paddingTop="30dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <kr.go.molit.nhsnes.widget.TextViewEx
                        android:id="@+id/tv_error"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="15dp"
                        android:textColor="#ffffff"
                        android:textSize="12sp"
                        android:visibility="gone" />
                    <!-- 아이디 입력 -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|top"
                        android:orientation="horizontal">
                        <!--ImageView
                            android:id="@+id/bt_agree_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top|left"
                            android:background="@drawable/check_btn" /-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|top"
                            android:orientation="vertical">

                            <kr.go.molit.nhsnes.widget.EditTextEx
                                android:id="@+id/et_id"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center|top"
                                android:background="@null"
                                android:drawableLeft="@drawable/icon_id"
                                android:hint="ID 입력"
                                android:maxLines="1"
                                android:padding="5dp"
                                android:singleLine="true"
                                android:text=""
                                android:textColor="#ffffff"
                                android:textColorHint="#7a7a7a"
                                android:textCursorDrawable="@null"
                                android:textSize="14.67sp"
                                custom:type="eng" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="#69a5ff" />
                        </LinearLayout>
                    </LinearLayout>
                    <!-- 비번 입력 -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|top"
                        android:layout_marginTop="15dp"
                        android:orientation="horizontal">
                        <!--ImageView
                            android:id="@+id/bt_agree_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top|left"
                            android:background="@drawable/check_btn" /-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|top"
                            android:orientation="vertical">

                            <kr.go.molit.nhsnes.widget.EditTextEx
                                android:id="@+id/et_pass"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center|top"
                                android:background="@null"
                                android:drawableLeft="@drawable/icon_pw"
                                android:hint="비밀번호 입력"
                                android:maxLines="1"
                                android:padding="5dp"
                                android:singleLine="true"
                                android:text=""
                                android:textColor="#ffffff"
                                android:textColorHint="#7a7a7a"
                                android:textCursorDrawable="@null"
                                android:textSize="14.67sp"
                                custom:type="pass" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="#69a5ff" />
                        </LinearLayout>
                    </LinearLayout>
                    <!-- 자동로그인, 아이디/비번찾기 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left|top"
                        android:layout_marginTop="15dp">

                        <CheckBox
                            android:id="@+id/cb_auto"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|left"
                            android:button="@drawable/check_auto_login" />

                        <kr.go.molit.nhsnes.widget.TextViewEx
                            android:id="@+id/bt_find_id"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="아이디 찾기"
                            android:textColor="#ffffff"
                            android:textSize="12.5sp" />

                        <kr.go.molit.nhsnes.widget.TextViewEx
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:text="|"
                            android:textColor="#ffffff"
                            android:textSize="12.5sp" />

                        <kr.go.molit.nhsnes.widget.TextViewEx
                            android:id="@+id/bt_find_pwd"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="비밀번호 찾기"
                            android:textColor="#ffffff"
                            android:textSize="12.5sp" />

                        <!--<ImageButton-->
                        <!--android:id="@+id/bt_find_id"-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:layout_gravity="center|right"-->
                        <!--android:background="@drawable/selector_pwfd" />-->
                    </LinearLayout>

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp">

                        <ImageButton
                            android:id="@+id/bt_login"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/selector_login" />

                        <kr.go.molit.nhsnes.widget.TextViewEx
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="로그인"
                            android:textColor="#ffffff"
                            android:textSize="13.33sp" />
                    </FrameLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|top"
                        android:layout_marginTop="15dp"
                        android:orientation="horizontal">

                        <kr.go.molit.nhsnes.widget.TextViewEx
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="아직 회원이 아니십니까?"
                            android:textColor="#d5d5d5"
                            android:textSize="12sp" />

                        <ImageButton
                            android:id="@+id/bt_signin"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|right"
                            android:layout_marginLeft="10dp"
                            android:background="@drawable/selector_signin" />
                    </LinearLayout>
                    <!-- 오류 메세지 보여줄때 하단이 찌그러짐 -->
                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="30dp" />
                </LinearLayout>
            </FrameLayout>
        </LinearLayout>
    </FrameLayout>
</FrameLayout>
