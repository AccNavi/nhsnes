<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/dialogBg"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/img_pop_title_type1">

        <kr.go.molit.nhsnes.widget.TextViewEx
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="5dp"
            android:text="즐겨찾기 추가"
            android:textColor="#ffffff"
            android:textSize="20sp" />
    </FrameLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/img_pop_content_type1"
        android:gravity="center"
        android:orientation="vertical">

        <kr.go.molit.nhsnes.widget.TextViewEx
            android:id="@+id/tve_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:text="출발지"
            android:textColor="#ffffff"
            android:textSize="16dp" />

        <kr.go.molit.nhsnes.widget.TextViewEx
            android:id="@+id/tv_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="10dp"
            android:text=""
            android:textColor="#ffffff"
            android:textSize="14dp" />

        <kr.go.molit.nhsnes.widget.TextViewEx
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="5dp"
            android:visibility="gone"
            android:layout_marginTop="10dp"
            android:text="도착지"
            android:textColor="#ffffff"
            android:textSize="16dp" />

        <kr.go.molit.nhsnes.widget.TextViewEx
            android:id="@+id/tv_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="10dp"
            android:visibility="gone"
            android:text=""
            android:textColor="#ffffff"
            android:textSize="14dp" />

        <kr.go.molit.nhsnes.widget.TextViewEx
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="5dp"
            android:visibility="gone"
            android:layout_marginTop="10dp"
            android:text="경유지"
            android:textColor="#ffffff"
            android:textSize="16dp" />


        <LinearLayout
            android:id="@+id/ll_routes"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

        </LinearLayout>

        <kr.go.molit.nhsnes.widget.TextViewEx
            android:id="@+id/tv_route"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="10dp"
            android:text=""
            android:visibility="gone"
            android:textColor="#ffffff"
            android:textSize="14dp" />


        <EditText
            android:id="@+id/et_favorite_name"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"
            android:background="@android:color/darker_gray"
            android:paddingBottom="0dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="0dp"
            android:singleLine="true"
            android:textSize="12sp" />


        <FrameLayout
            android:id="@+id/bt_menu1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/selector_type3_btn"
            android:clickable="true"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_icon1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|left"
                    android:background="@drawable/icon_destination2" />

                <kr.go.molit.nhsnes.widget.TextViewEx
                    android:id="@+id/tv_menu1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|left"
                    android:layout_marginLeft="5dp"
                    android:text="경유지 명칭 변경"
                    android:textColor="@color/white"
                    android:textSize="16sp" />
            </LinearLayout>
        </FrameLayout>


        <FrameLayout
            android:id="@+id/bt_menu8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/selector_type3_btn"
            android:clickable="true"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_icon8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|left"
                    android:background="@drawable/icon_destination2" />

                <kr.go.molit.nhsnes.widget.TextViewEx
                    android:id="@+id/tv_menu8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|left"
                    android:layout_marginLeft="5dp"
                    android:text="경유지 선택"
                    android:textColor="@color/white"
                    android:textSize="16sp" />
            </LinearLayout>
        </FrameLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/img_pop_botton_type2"
        android:orientation="horizontal">

        <kr.go.molit.nhsnes.widget.TextViewEx
            android:id="@+id/btn_save"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="저장"
            android:textColor="@drawable/selector_dialog_btn"
            android:textSize="16.67sp" />

        <kr.go.molit.nhsnes.widget.TextViewEx
            android:id="@+id/btn_cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="취소"
            android:textColor="@drawable/selector_dialog_btn"
            android:textSize="16.67sp" />
    </LinearLayout>

</LinearLayout>

