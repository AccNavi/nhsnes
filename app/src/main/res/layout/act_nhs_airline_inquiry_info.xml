<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_bg3"
    android:orientation="vertical">

    <kr.go.molit.nhsnes.widget.ActionBarEx
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:text="항공 정보"
        app:titleIcon="@drawable/icon_airinfo" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/action_bar"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="vertical">

                <kr.go.molit.nhsnes.widget.CustomViewListType1
                    android:id="@+id/airspace_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:postIcon="@drawable/icon_next_nor"
                    app:text="공역" />

                <kr.go.molit.nhsnes.widget.CustomViewListType1
                    android:id="@+id/obstacle_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:postIcon="@drawable/icon_next_nor"
                    app:text="장애물" />

                <kr.go.molit.nhsnes.widget.CustomViewListType1
                    android:id="@+id/airfield_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:postIcon="@drawable/icon_next_nor"
                    app:text="이착륙장" />

                <kr.go.molit.nhsnes.widget.CustomViewListType1
                    android:id="@+id/airport_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:postIcon="@drawable/icon_next_nor"
                    app:text="공항 조회" />

                <kr.go.molit.nhsnes.widget.CustomViewListType1
                    android:id="@+id/flight_path_List"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:postIcon="@drawable/icon_next_nor"
                    app:text="비행경로 조회" />

                <kr.go.molit.nhsnes.widget.CustomViewListType1
                    android:id="@+id/flight_vfr_path"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:postIcon="@drawable/icon_next_nor"
                    app:text="시계비행로 조회" />


                <kr.go.molit.nhsnes.widget.CustomViewListType1
                    android:id="@+id/route_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:postIcon="@drawable/icon_next_nor"
                    app:text="항로 조회" />

                <kr.go.molit.nhsnes.widget.CustomViewListType1
                    android:id="@+id/pylon_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:postIcon="@drawable/icon_next_nor"
                    app:text="철탑 조회" />

                <kr.go.molit.nhsnes.widget.CustomViewListType1
                    android:id="@+id/runway_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:postIcon="@drawable/icon_next_nor"
                    app:text="활주로 조회" />

                <kr.go.molit.nhsnes.widget.CustomViewListType1
                    android:id="@+id/heliport_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:postIcon="@drawable/icon_next_nor"
                    app:text="헬기장 조회" />

                <kr.go.molit.nhsnes.widget.CustomViewListType1
                    android:id="@+id/notam_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:postIcon="@drawable/icon_download_nor"
                    app:text="항공시보" />



            </LinearLayout>


        </LinearLayout>

    </ScrollView>
</LinearLayout>