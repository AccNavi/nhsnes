<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/dialogBg"
    android:orientation="vertical">

    <com.modim.lan.lanandroid.NhsLanView
        android:id="@+id/nlv_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">



    </com.modim.lan.lanandroid.NhsLanView>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@android:color/black"/>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/dialogBg"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/img_pop_title_type1">

            <kr.go.molit.nhsnes.widget.TextViewEx
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp"
                android:text="승인 완료"
                android:textColor="#ffffff"
                android:textSize="20sp" />
        </FrameLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/img_pop_content_type1"
            android:orientation="vertical">

            <kr.go.molit.nhsnes.widget.TextViewEx
                android:id="@+id/tve_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="15dp"
                android:text="Mar 10 2017 HL1191"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="30dp"
                android:orientation="horizontal"
                android:padding="5dp"
                android:visibility="gone">

                <kr.go.molit.nhsnes.widget.TextViewEx
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1.4"
                    android:gravity="center"
                    android:text="날짜"
                    android:textColor="@color/white"
                    android:textSize="15sp" />

                <kr.go.molit.nhsnes.widget.TextViewEx
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:text="출발지"
                    android:textColor="@color/white"
                    android:textSize="15sp" />

                <kr.go.molit.nhsnes.widget.TextViewEx
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:text="도착지"
                    android:textColor="@color/white"
                    android:textSize="15sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:orientation="horizontal"
                android:padding="4dp"
                android:visibility="gone">

                <kr.go.molit.nhsnes.widget.TextViewEx
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1.4"
                    android:gravity="center"
                    android:text="2017.06.25"
                    android:textColor="@color/white"
                    android:textSize="20sp" />

                <kr.go.molit.nhsnes.widget.TextViewEx
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:text="상암동"
                    android:textColor="@color/white"
                    android:textSize="20sp" />

                <kr.go.molit.nhsnes.widget.TextViewEx
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:text="삼성동"
                    android:textColor="@color/white"
                    android:textSize="20sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:orientation="horizontal"
                android:padding="4dp">

                <kr.go.molit.nhsnes.widget.TextViewEx
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="승인시각 : "
                    android:textColor="@color/white" />

                <kr.go.molit.nhsnes.widget.TextViewEx
                    android:id="@+id/tve_agree_date"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="2017년 03월 02일 18:00"
                    android:textColor="@color/white" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:orientation="horizontal"
                android:padding="4dp">

                <kr.go.molit.nhsnes.widget.TextViewEx
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="도착 예정 시간 : "
                    android:textColor="@color/white" />

                <kr.go.molit.nhsnes.widget.TextViewEx
                    android:id="@+id/tve_arrive_time"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="10:28"
                    android:textColor="@color/white" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:orientation="horizontal"
                android:padding="4dp">

                <kr.go.molit.nhsnes.widget.TextViewEx
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="운항 거리 : "
                    android:textColor="@color/white" />

                <kr.go.molit.nhsnes.widget.TextViewEx
                    android:id="@+id/tve_distance"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="0km"
                    android:textColor="@color/white" />


            </LinearLayout>

            <FrameLayout
                android:id="@+id/bt_menu1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/selector_type1_btn"
                android:clickable="true">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/icon_check2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|left"
                        android:background="@drawable/icon_info1" />

                    <kr.go.molit.nhsnes.widget.TextViewEx
                        android:id="@+id/tv_menu1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|left"
                        android:layout_marginLeft="5dp"
                        android:text="항공 정보"
                        android:textColor="@color/white"
                        android:textSize="16sp" />
                </LinearLayout>


            </FrameLayout>

            <FrameLayout
                android:id="@+id/bt_menu2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="10dp"
                android:background="@drawable/selector_type1_btn"
                android:clickable="true">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|left"
                        android:background="@drawable/icon_info1" />

                    <kr.go.molit.nhsnes.widget.TextViewEx
                        android:id="@+id/tv_start_report"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|left"
                        android:layout_marginLeft="5dp"
                        android:text="비행 시작 보고"
                        android:textColor="@color/white"
                        android:textSize="16sp" />
                </LinearLayout>
            </FrameLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/img_pop_botton_type1"
            android:orientation="horizontal">

            <kr.go.molit.nhsnes.widget.TextViewEx
                android:id="@+id/btn_view"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="AMS 전문보기"
                android:textColor="@drawable/selector_dialog_btn"
                android:textSize="16.67sp" />

            <kr.go.molit.nhsnes.widget.TextViewEx
                android:id="@+id/btn_simulation"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="모의비행"
                android:textColor="@drawable/selector_dialog_btn"
                android:textSize="16.67sp" />


        </LinearLayout>

    </LinearLayout>

</RelativeLayout>

