<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_bg4"
    android:orientation="vertical">

    <kr.go.molit.nhsnes.widget.ActionBarEx
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:text="환경설정"
        app:titleIcon="@drawable/icon_setting" />

    <LinearLayout
        android:id="@+id/layout_config_tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/img_tab3_1"
        android:orientation="horizontal">

        <kr.go.molit.nhsnes.widget.ButtonEx
            android:id="@+id/bt_flight_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:text="비행정보 설정"
            android:textColor="@color/white" />

        <kr.go.molit.nhsnes.widget.ButtonEx
            android:id="@+id/bt_flight_mark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:text="비행표시 설정"
            android:textColor="@color/white" />

        <kr.go.molit.nhsnes.widget.ButtonEx
            android:id="@+id/bt_system_setting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:text="시스템 설정"
            android:textColor="@color/white" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/layoutContents"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="-80dp" />

</LinearLayout>